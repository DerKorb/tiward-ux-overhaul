{
  "manifest_version": 3,
  "name": "TI4 UI Tweaks",
  "version": "1.0",
  "description": "A collection of tweaks to the Twilight Imperium 4th Edition UI.",
  "permissions": [
    "*://twilightwars.com/*",
    "*://*.twilightwars.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://twilightwars.com/*",
        "*://*.twilightwars.com/*"
      ],
      "js": [
        "init.js"
      ]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "bundle.js.iife.js"
      ],
      "matches": [
        "*://twilightwars.com/*",
        "*://*.twilightwars.com/*"
      ]
    }
  ]
}